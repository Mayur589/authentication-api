{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "",
    "typeRoots": ["src/types"]
  },
  "ts-node": {
    "esm": true
  },
  "include": ["server.ts", "src/**/*"],
  "exclude": ["node_modules"]
}
